<div class="container text-center">
    <h2>Info about <%= @dog.dog_name%></h2>
    <%= link_to "Add new entry", new_herding_path(dog_id: @dog.id), method: :get, class: "btn btn-success" %>
    
</div>
<% results = Herding.where(dog_id: @dog.id) %>

<% if results.present? && !results.empty? %>
<div class="container">   
    <h3>Pasení</h3> 

    <div class="container">
        <table class="table table-dark text-center">
            <thead>
            <tr>
                <th scope="col">Kategorie</th>
                <th scope="col">Počet získaných bodů</th>
                <th scope="col" colspan="2">Akce</th>
            </tr>
            </thead>
            <tbody>
                
            <%results.each do |r| %>
            <tr>
                <td><%= r.category %> </td>
                <td><%= r.final_points %></td>
                <td><%= link_to "Edit", edit_herding_path(dog_id: @dog.id), method: :get, class: "btn btn-success" %>
                    <%= link_to "Delete", herding_path(r), method: :delete, class: "btn btn-outline-danger delete-link", data: { turbo_method: :delete, confirm: "Are you sure?" } %>
                </td>
            </tr>
            <% end %>
            </tbody>
        </table>
    </div>
    
</div>
<% end %>
<div class="container">
<%= link_to "Back to owner", owner_path(@dog.owner_id), method: :get, class: "btn btn-success" %>
</div>
<%= render partial: "shared/error", locals: { obj: @dog } %>    

<div class="container">
    <%= form_with(model: @dog, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :dog_name, "Jméno psa", class: "form-label" %>
        <%= f.text_field :dog_name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :date_of_birth, "Datum narození", class: "form-label" %>
        <%= f.date_field :date_of_birth, class: "form-control", id: "event_date_picker" %>
      </div>      
      <div class="mb-3">
        <%= f.submit "Upravit", class: "btn btn-warning" %>
      </div>
    <% end %>
    </div>

<div class="container">
    <%= link_to "Zpět na Váš účet", owner_path(current_owner), class: "btn btn-success" %>
</div> 








<% if @dog.errors.any? %>
    <h2>The following errors occured</h2>
    <ul>
        <% @dog.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
            <% end %>
    </ul>
<% end %>


<div class="container">
    <%= form_with(model: @dog, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :dog_name, class: "form-label" %>
        <%= f.text_field :dog_name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :date_of_birth, class: "form-label" %>
        <%= f.text_field :date_of_birth, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>

<div class="container">
    <%= link_to "Back to the home page", dogs_path %>
</div> 








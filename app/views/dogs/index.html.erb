<div class="container">
<% @dogs.each do |dog| %>
<div class="card text-center" style="width: 30rem;">
    <div class="card-body">
      <h5 class="card-title"><%= dog.dog_name %></h5>
      <p class="card-text"><%= dog.date_of_birth %></p>
      <a href="<%= dog_path(dog) %>" class="btn btn-outline-success">Show details</a>
      <a href="<%= edit_dog_path(dog) %>" class="btn btn-outline-warning">Edit details</a>
      <%= link_to dog_path(dog), method: :delete, class: "btn btn-outline-danger delete-link", data: { turbo_method: :delete, "turbo-confirm": "Are you sure?" } do %>Delete
      <% end %>
    </div>
  </div>
<% end %>
</div>

<div class="container">
    <a href="<%= new_dog_path() %>" class="btn btn-outline-secondary">Add new dog</a>
</div>
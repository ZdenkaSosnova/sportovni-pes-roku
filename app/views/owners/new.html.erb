<div class="container">
    <% if @owner.errors.any? %>
        <h2> The following erros prevented the article from being saved </h2>
        <ul>
        <% @owner.errors.full_messages.each do |msg| %>
            <li><%=  msg %></li>
        <% end %>
        </ul>
    <% end %>
    </div>
    
    
    <div class="container">
        <%= form_with(model: @owner, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Owner name" %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.text_field :password, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="mb-3">
            <%= f.submit class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
    
    <div class="container">
        <%= link_to "Back to the home page", dogs_path %>
    </div> 
    
    
    
    
    
    
    
    
    
    
    
    
    
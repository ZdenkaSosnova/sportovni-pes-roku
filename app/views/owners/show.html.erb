<div class="container text-center">
    <h2>Info about member <%= @owner.first_name%> <%= @owner.last_name %></h2>
    <% dogs = Dog.where(owner_id: @owner.id) %>
    <% if dogs.present? && !dogs.empty? %>
        <h4>Info about your dogs</h4>
        <div class="container">
            <table class="table table-dark text-center">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Date of birth</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
                </thead>
                <tbody>
                    
                <%dogs.each do |dog| %>
                <tr>
                    <td><%= dog.dog_name %> </td>
                    <td><%= dog.date_of_birth %></td>
                    <td>    
                        <%= link_to "Edit", edit_dog_path(dog), method: :get, class: "btn btn-success" %>
                        <%= link_to "Delete", dog_path(dog), method: :delete, class: "btn btn-outline-danger delete-link", data: { turbo_method: :delete, "turbo-confirm": "Are you sure?" } %>
                    </td>
                </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    <% end %>
    
    <%= link_to "Edit account", edit_owner_path(@owner), class: "btn btn-success" %>
    <%= link_to "Add new dog", new_dog_path, class: "btn btn-warning" %>
    
    
    
    
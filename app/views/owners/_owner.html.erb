<div class="container text-center">
    <% dogs = Dog.where(owner_id: @owner.id) %>
    <% if dogs.present? && !dogs.empty? %>
        <h4>Vaši psi</h4>
        <div class="container">
            <table class="table table-dark text-center">
                <thead>
                <tr>
                    <th scope="col">Jméno</th>
                    <th scope="col">Datum narození</th>
                    <th scope="col" colspan="2"></th>
                </tr>
                </thead>
                <tbody>
                    
                <%dogs.each do |dog| %>
                <tr>
                    <td><%= dog.dog_name %> </td>
                    <td><%= dog.date_of_birth.strftime("%d.%m.%Y") %></td>
                    <td>
                        <%= link_to "Upravit údaje psa", edit_dog_path(dog), method: :get, class: "btn btn-success" %>    
                        <%= link_to "Detaily", dog_path(dog), method: :get, class: "btn btn-success" %>
                        <%= link_to "Vymazat psa", dog_path(dog), method: :delete, class: "btn btn-danger delete-link", data: { turbo_method: :delete, "turbo-confirm": "Are you sure?" } %>
                    </td>
                </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    <% end %>
    
    <%= link_to "Změnit přihlašovací údaje", edit_owner_path(@owner), class: "btn btn-success" %>
    <%= link_to "Přidat nového psa", new_dog_path, class: "btn btn-success" %>
    
</div>
    
    
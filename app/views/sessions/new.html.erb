<div class="container">
    <h1>Přihlaste se</h1>
</div>

<div class="container">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "Email",class: "form-label" %>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" , value: params[:first_name]%>
          </div>    
          <div class="mb-3">
            <%= f.label :password, "Heslo", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="mb-3">
            <%= f.submit "Přihlásit", class: "btn btn-warning" %>
          </div>
        <% end %>
</div>
    





    
    
    
    
    
    
    
    
    